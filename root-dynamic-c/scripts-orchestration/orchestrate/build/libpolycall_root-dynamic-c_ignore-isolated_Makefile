# Sinphasé Isolated Component: ignore
# Generated by automated governance system

CC = gcc
CFLAGS = -Wall -Wextra -std=c11 -O2
INCLUDES = -I./include -I../include

SRCDIR = src
OBJDIR = obj
SOURCES = $(wildcard $(SRCDIR)/*.c)
OBJECTS = $(SOURCES:$(SRCDIR)/%.c=$(OBJDIR)/%.o)
TARGET = libignore_isolated.a

.PHONY: all clean

all: $(TARGET)

$(TARGET): $(OBJECTS)
	@mkdir -p $(dir $@)
	ar rcs $@ $^

$(OBJDIR)/%.o: $(SRCDIR)/%.c
	@mkdir -p $(dir $@)
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -rf $(OBJDIR) $(TARGET)

# Sinphasé governance compliance check
governance-check:
	@echo "Validating single-pass compilation requirements..."
	@make clean && make -j1  # Force single-pass
